<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OrderLookup.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OrderLookup.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="{Binding AppTitle}">
    
    <FlyoutItem Title="BOL Lookup">
        <ShellContent Route="BolLookupView" ContentTemplate="{DataTemplate local:BolLookupView}"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Main Page">
        <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}"></ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="Settings">
        <ShellContent Route="SettingsView" ContentTemplate="{DataTemplate local:SettingsView}"></ShellContent>
    </FlyoutItem>
</Shell>
